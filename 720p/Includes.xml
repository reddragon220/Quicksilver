	<include name="background_reset">
		<onclick>Skin.Reset(Custom_Background)</onclick>
		<onclick>Skin.Reset(Background1)</onclick>
		<onclick>Skin.Reset(Background2)</onclick>
	</include>
	
	
	<!-- Dialog -->
	<include name="dialog_animation">
		<animation type="WindowOpen" reversible="false">
			<effect type="zoom" start="80" end="100" center="640,360" delay="200" easing="out" tween="back" time="300"/>
			<effect type="fade" delay="200" start="0" end="100" time="300"/>
		</animation>
		<animation type="WindowClose" reversible="false">
			<effect type="zoom" start="100" end="80" center="640,360" easing="in" tween="back" time="300"/>
			<effect type="fade" start="100" end="0" time="300"/>
		</animation>
	</include>
	<include name="info_fade">
		<animation effect="fade" delay="200" start="0" end="100" time="300">WindowOpen</animation>
		<animation effect="fade" start="100" end="0" time="300">WindowClose</animation>
	</include>
	<include name="dialog_overlay">
		<control type="image">
			<description>Dialog overlay</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<aspectratio>stretch</aspectratio>
			<texture>background/dialog overlay.png</texture>
			<fadetime>200</fadetime>
			<animation effect="fade" start="0" end="100" time="300">WindowOpen</animation>
			<animation effect="fade" start="100" end="0" time="300">WindowClose</animation>
		</control>
	</include>
</includes>
